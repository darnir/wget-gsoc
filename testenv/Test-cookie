<WgetTest name="Test basic cookie functionality">
    <InputFile name="AnnaKarenina">All happy families are alike;
    each unhappy family is unhappy in its own way.
    </InputFile>
    <InputFile name="1984">It was a bright cold day in April,
    and the clocks were striking thirteen.
    </InputFile>

    <Option>-d</Option>

    <ServerRule command="Cookie">
        <SendCookie file="AnnaKarenina">sess-id=0213; path=/</SendCookie>
        <SendCookie file="AnnaKarenina">author=Tolstoy; path=/</SendCookie>
        <SendCookie file="AnnaKarenina">some=thing; path=/</SendCookie>
        <ExpectCookie file="1984">author=Tolstoy; sess-id=0213; some=thing</ExpectCookie>
    </ServerRule>
    <ExpectedResults>
        <ReturnCode>0</ReturnCode>
        <File>AnnaKarenina</File>
        <File>1984</File>
    </ExpectedResults>

</WgetTest>
