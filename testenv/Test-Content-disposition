<WgetTest name="Test Content-Disposition Headers">
<!--
     Test if Wget reads the Content-Disposition Header correctly.
-->

    <InputFile name="File2.html"><![CDATA[<html>
<head>
</head>
<body>
2nd Test File
</body>
</html>]]></InputFile>

    <Option>-d -c</Option>
    <Option>-v --content-disposition</Option>

    <ServerRule command="Content Disposition">
        <File>File2.html</File>
        <NameParam>treial</NameParam>
    </ServerRule>
    <ExpectedResults>
        <ReturnCode>0</ReturnCode>
        <File orig="File2.html">treial</File>
    </ExpectedResults>

</WgetTest>
